# создать виртуальное окружение
python3 -m venv venv

# активация виртуального окружения
source venv/bin/activate

# старт проекта
django-admin startproject project

# настроить БД
DATABASES = {
    'default': {
        'ENGINE'  : 'django.db.backends.postgresql',
        'HOST'    : 'localhost',
        'USER'    : 'postgres',
        'PASSWORD': 'Perun2203',
        'NAME'    : 'your_name_db'
    }
}

# добавить базу в PodtgresQL
CREATE DATABASE your_name_db;

# сделать миграции в БД
python3 manage.py migrate

# добавить приложение
python3 manage.py startapp blog

# регистрация приложения
INSTALLED_APPS = [
    'django.contrib.admin',
    'django.contrib.auth',
    'django.contrib.contenttypes',
    'django.contrib.sessions',
    'django.contrib.messages',
    'django.contrib.staticfiles',
    'blog.apps.BlogConfig'
]

# создание миграций
python3 manage.py makemigrations blog

# посмотреть SQL-код миграции
python manage.py sqlmigrate blog 0001

# приминение миграций
python3 manage.py migrate blog 0001

# регистрация модели в админке
from .models import Post
@admin.register(Post)
class PostAdmin(admin.ModelAdmin):
    pass

# добавить суперюзера
python3 manage.py createsuperuser

# папка с шаблонами, в той же папке где и проект, название "#site"
TEMPLATE_DIR = os.path.join(os.path.dirname(BASE_DIR), '#site')
TEMPLATES = [
    {
        'BACKEND': 'django.template.backends.django.DjangoTemplates',
        'DIRS': [TEMPLATE_DIR],
        'APP_DIRS': True,
        'OPTIONS': {
            'context_processors': [
                'django.template.context_processors.debug',
                'django.template.context_processors.request',
                'django.contrib.auth.context_processors.auth',
                'django.contrib.messages.context_processors.messages',
            ],
        },
    },
]

# добавление пути для сатичеких файлов
STATICFILES_DIRS = [TEMPLATE_DIR]
# после этого все ссылки на статические файлы в шаблоне обернуть в {% static "path" %}

# настройки для медиа (файлы, картинки ...)
MEDIA_URL = '/media/'
MEDIA_ROOT = os.path.join(BASE_DIR, 'media/')